{
    "files.exclude": {
        "**/*.o": true,
        "**/.hg": true,
        "**/.git": true,
        "**/.svn": true,
        "**/*.o.cmd": true,
        "**/.DS_Store": true,
        "**/CMakeFiles": true,
        "**/.gitattributes": true,
        "**/CMakeCache.txt": true,
        "**/cmake-build-debug": true,
        "**/cmake_install.cmake": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "[cpp]": {
        "editor.quickSuggestions": true
    },
    "[c]": {
        "editor.quickSuggestions": true
    },
    
    "C_Cpp.intelliSenseEngineFallback": "Disabled",
    
    //Use ZSH as the integrated terminal 
    "terminal.integrated.shell.osx": "zsh",

    "files.autoSave": "afterDelay",
    "C_Cpp.configurationWarnings": "Disabled",
    "files.associations": {
        "__config": "cpp",
        "__nullptr": "cpp",
        "cstddef": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "limits": "cpp",
        "type_traits": "cpp",
